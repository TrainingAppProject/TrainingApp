@{
    ViewData["Title"] = "Assessment Page";
}

@section Scripts
{
    <script src="@Url.Content("~/js/pages/assessment/assessment.js")"></script>
}

@section Styles {
    <link href="@Url.Content("~/css/pages/assessment.css")" rel="stylesheet" type="text/css" />
}

<hr class="solid" />

<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row align-items-center">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h3 class="page-title">Assessment</h3>
            </div>
        </div>
        <button id="createAssessmentModalBtn" class="btn btn-primary mt20" type="button">
            <i class="fas fa-plus-circle"></i>
            NEW
        </button>
    </div>

    <div class="bg-white m20 p20">
        <div class="row">
            <div class="col-md-12 col-lg-12 col-sm-12">
                <div class="white-box">
                    <div class="table-responsive">
                        <table class="table no-wrap">
                            <thead>
                                <tr>
                                    <th class="border-top-0">NAME</th>
                                    <th class="border-top-0">DATE</th>
                                    <th class="border-top-0">EXAMINER</th>
                                    <th class="border-top-0">TRAINEE(S)</th>
                                    <th class="border-top-0">SIGNED</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    for (int i = 0; i < 15; i++)
                                    {
                                        <tr>
                                            <td>Take off test</td>
                                            <td class="txt-oflo">12.10.2022</td>
                                            <td>Marvin McKinney</td>
                                            <td>Trainee 1</td>
                                            <td>YES</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<partial name="_CreateAssessmentModal" />
