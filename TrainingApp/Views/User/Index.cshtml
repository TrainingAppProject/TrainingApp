@model TrainingApp.Models.UserViewModel
@{
    ViewData["Title"] = "User Page";
}

@section Scripts
{
    <script src="@Url.Content("~/js/pages/user/user.js")"></script>
}

@section Styles {
    <link href="@Url.Content("~/css/pages/user.css")" rel="stylesheet" type="text/css" />
}

<hr class="solid" />

<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row align-items-center">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h3 class="page-title">User</h3>
            </div>
        </div>
        <button id="createUserModalBtn" class="btn btn-primary mt20" type="button">
            <i class="fas fa-plus-circle"></i>
            NEW
        </button>
    </div>

    <div class="bg-white m20 p20">
        <div class="row">
            <div class="col-md-12 col-lg-12 col-sm-12">
                <div class="white-box">
                    <div class="table-responsive">
                        <table class="table no-wrap">
                            <thead>
                                <tr>
                                    <th class="border-top-0">NAME</th>
                                    <th class="border-top-0">ROLE</th>
                                    <th class="border-top-0">USER NAME</th>
                                    <th class="border-top-0">USER CODE</th>
                                    <th class="border-top-0">CREATED</th>
                                    <th class="border-top-0">OPTIONS</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach(var user in Model.Users)
                                    {
                                        <tr>
                                            <td>@user.FirstName @user.LastName</td>
                                            <td>@user.Role</td>
                                            <td>@user.UserName</td>
                                            <td>@user.UserCode</td>
                                            <td>@user.CreateTime.ToShortDateString()</td>
                                            <td>
                                                <button class="btn text-warning"><i class="fas fa-pencil-alt"></i></button>
                                                <button class="btn text-danger"><i class="far fa-trash-alt"></i></button>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<partial name="_CreateUserModal" model="Model.User"/>
