<div class="modal" id="deleteBasicDefaultModal" tabindex="-1" role="dialog" aria-labelledby="deleteBasicDefaultModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Delete <span class="action"></span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="clearform('deleteBasicDefaultModal')">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modalBody">
            </div>
            <div class="modal-footer">

                <button type="button" class="btn btn-light button-left" onclick="clearform('deleteBasicDefaultModal')">Cancel</button>
                <button type="submit" class="btn btn-danger" onclick="submitDelete()">Delete</button>
            </div>
        </div>
    </div>
</div>