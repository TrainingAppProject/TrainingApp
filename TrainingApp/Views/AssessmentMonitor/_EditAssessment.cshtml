<form asp-controller="AssessmentMonitor" asp-action="EditAssessment" method="post" id="editAssessmentForm" role="form">
    <div class="modal-body">
        <input type="text" class="form-control hide" asp-for="Assessment.ID">
        <input type="text" class="form-control hide" asp-for="Assessment.ExaminerID">
        <input type="text" class="form-control hide" asp-for="Assessment.TraineeID">
        <input type="text" class="form-control hide" asp-for="Assessment.State">
        <div class="form-group row">
            <label for="assessmentName" class="col-sm-4 col-form-label">
                Name <span class="red">*</span>
            </label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="assessmentName" asp-for="Assessment.Name" required>
                <span id="nameError" class="error text-danger" asp-validation-for="Assessment.Name"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="assessmentDescription" class="col-sm-4 col-form-label">
                Description
            </label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="assessmentDescription" asp-for="Assessment.Description">
                <span id="descriptionError" class="error text-danger" asp-validation-for="Assessment.Description"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="assessmentPurpose" class="col-sm-4 col-form-label">
                Purpose
            </label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="assessmentPurpose" asp-for="Assessment.Purpose">
            </div>
        </div>
        <div class="form-group row">
            <label for="templateName" class="col-sm-4 col-form-label">
                Template
            </label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="templateName" value="@Model.Assessment.Template.Name" disabled>
            </div>
        </div>
        <div class="form-group row">
            <label for="gradingSchema" class="col-sm-4 col-form-label">
                Grading Schema
            </label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="gradingSchema" value="@Html.DisplayFor(Model => @Model.Assessment.Template.GradingSchema)" disabled>
            </div>
        </div>
        <div class="form-group row">
            <label for="createdBy" class="col-sm-4 col-form-label">
                Examiner
            </label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="createdBy" value="@Model.Assessment.Examiner.FirstName @Model.Assessment.Examiner.LastName" disabled>
            </div>
        </div>
        <div class="form-group row">
            <label for="createdBy" class="col-sm-4 col-form-label">
                Trainee
            </label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="createdBy" value="@Model.Assessment.Trainee.FirstName @Model.Assessment.Trainee.LastName" disabled>
            </div>
        </div>
        <div class="form-group row">
            <label for="modifiedDate" class="col-sm-4 col-form-label">
                Modified Date
            </label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="modifiedDate" value="@Model.Assessment.ModifiedDate" disabled>
            </div>
        </div>
        <div class="form-group row">
            <label for="state" class="col-sm-4 col-form-label">
                State
            </label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="state" value="@((BasicStatus) @Model.Assessment.State)" disabled>
            </div>
        </div>
        <div class="form-group row">
            <label for="overallGrade" class="col-sm-4 col-form-label">
                Result
            </label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="overallGradeText" disabled>
                <input type="text" class="form-control hide" id="overallGrade" value="@Model.Assessment.OverallGrade" disabled>
            </div>
        </div>
    </div>
</form>