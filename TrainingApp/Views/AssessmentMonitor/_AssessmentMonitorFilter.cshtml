<div class="bg-white m20 p20 filterDiv">
    <div class="row">
        <div class="col-md-12 col-lg-12 col-sm-12">
            <div id="addFilterToggleDiv">
                <div class="row">
                    <div class="col-lg-9">
                        <button id="addFilterToggleBtn" class="btn btn-link fs17">
                            <i class="fas fa-filter"></i>
                            Add Filters
                        </button>
                    </div>
                    <div class="input-group col-lg-3">
                        <div class="input-group mb-3 searchInput">
                            <div class="input-group-prepend ">
                                <span class="input-group-text iconSpan" id="basic-addon1">
                                    <i class="fas fa-search fa-lg"></i>
                                </span>
                            </div>
                            <input type="text" class=" form-control" placeholder="Search"
                                   aria-label="Username" aria-describedby="basic-addon1">
                        </div>
                    </div>
                </div>
              
                <div class="filterDropDown hide">
                    <h4 class="title">Add Filters</h4>
                    <div class="mt30 mb10">
                        <p class="subtitle">Date</p>
                        <div class="custom-control-right custom-switch">
                            <input type="checkbox" class="custom-control-input" id="createFilterSwitch">
                            <label id="createFilterSwitchlabel" class="custom-control-label Upper"
                                   for="createFilterSwitch">create</label>
                        </div>
                        <div class="custom-control-right custom-switch">
                            <input type="checkbox" class="custom-control-input" id="publishFilterSwitch">
                            <label id="publishFilterSwitchlabel" class="custom-control-label Upper"
                                   for="publishFilterSwitch">Modify</label>
                        </div>
                    </div>
                    <hr />
                    <div class="mt10">
                        <p class="subtitle">State</p>
                        <div class="custom-control-right custom-switch">
                            <input type="checkbox" class="custom-control-input" id="statusFilterSwitch">
                            <label class="custom-control-label Upper" for="statusFilterSwitch">Status</label>
                        </div>
                        <div class="custom-control-right custom-switch">
                            <input type="checkbox" class="custom-control-input" id="resultFilterSwitch">
                            <label class="custom-control-label Upper"
                                   for="resultFilterSwitch">Result</label>
                        </div>
                    </div>
                    <hr />
                    <div class="mt10">
                        <p class="subtitle">State</p>
                        <div class="custom-control-right custom-switch">
                            <input type="checkbox" class="custom-control-input" id="examinerFilterSwitch">
                            <label id="examinerFilterSwitchlabel" class="custom-control-label Upper" for="examinerFilterSwitch">Examiner</label>
                        </div>
                        <div class="custom-control-right custom-switch">
                            <input type="checkbox" class="custom-control-input" id="gradeFilterSwitch">
                            <label id="traineeFilterSwitchlabel" class="custom-control-label Upper"
                                   for="traineeFilterSwitch">Trainee</label>
                        </div>
                    </div>
                    <div class="mt40">
                        <button class="btn btn-primary">Save</button>
                        <button class="btn btn-default floatRight">Cancel</button>
                    </div>
                </div>
            </div>

            <div class="mt20 d-flex">
                <div>
                    <div class="filterTags">
                        <input class="filterTagsInput" id="AssessmentMonitorDateRange" type="text"
                               name="AssessmentMonitorDateRange" value="Created Date: 01.01.2018 - 01.15.2018" />
                        <button><i class="far fa-times-circle buttonicon"></i></button>
                    </div>
                </div>
                <div class="ml20">
                    <div class="filterTags filterSelectTags">
                        <div class="dropdown inline">
                            <div class="btn dropdown-toggle"
                                 type="button" id="dropdownMenuButton"
                                 data-toggle="dropdown"
                                 aria-haspopup="true"
                                 aria-expanded="false">
                                State: Active
                            </div>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="#">Active</a>
                                <a class="dropdown-item" href="#">Deleted</a>
                            </div>
                        </div>
                        <button><i class="far fa-times-circle buttonicon inline"></i></button>
                    </div>
                </div>
                <div class="ml20">
                    <div class="filterTags filterSelectTags">
                        <div class="dropdown inline">
                            <div class="btn dropdown-toggle"
                                 type="button" id="dropdownMenuButton"
                                 data-toggle="dropdown"
                                 aria-haspopup="true"
                                 aria-expanded="false">
                                Grading Schema: GRADE(1-5)
                            </div>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="#">GRADE(1-5)</a>
                                <a class="dropdown-item" href="#">PASS/NOT PASS</a>
                            </div>
                        </div>
                        <button><i class="far fa-times-circle buttonicon inline"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>