@using TrainingApp.Models.Enums
@model TemplateViewModel

<div class="modal" id="createTemplateModal" tabindex="-1" role="dialog" aria-labelledby="createTemplateLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createTemplateLabel">Create Template</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"
                        onclick="modalClose('createTemplateModal')">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-controller="Template" asp-action="CreateTemplate" method="post" id="createTemplateForm" role="form">
                <div class="modal-body">
                    <div class="form-group row">
                        <label for="templateName" class="col-sm-4 col-form-label">
                            Name <span class="red">*</span>
                        </label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="templateName" asp-for="Template.Name" required>
                            <span id="nameError" class="error text-danger" asp-validation-for="Template.Name"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="gradingSchema" class="col-sm-4 col-form-label">
                            Grading Schema <span class="red">*</span>
                        </label>
                        <div class="col-sm-8">
                            <select class="form-control" id="gradingSchema" asp-for="Template.GradingSchema" asp-items="Html.GetEnumSelectList<GradingSchema>()" required>
                                <option class="placeholder-message" selected>Select Grading Schema...</option>
                            </select>
                            <span id="gradingSchemaError" class="error text-danger" asp-validation-for="Template.GradingSchema"></span>
                        </div>

                    </div>
                    <div class="form-group row">
                        <label for="templateDescription" class="col-sm-4 col-form-label">
                            Description
                        </label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="templateDescription" asp-for="Template.Description">
                            <span id="descriptionError" class="error text-danger" asp-validation-for="Template.Description"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="scriptNumber" class="col-sm-4 col-form-label">
                            Script Number
                        </label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="scriptNumber" asp-for="Template.ScriptNumber">
                            <span id="scriptNumberError" class="error text-danger" asp-validation-for="Template.ScriptNumber"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="attemptAllow" class="col-sm-4 col-form-label">
                            Attempts Allowed <br />per Task <span class="red">*</span>
                        </label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control mt10" id="attemptAllow" asp-for="Template.AttemptsAllowedPerTask">
                            <span id="attemptsAllowedPerTaskError" class="error text-danger" asp-validation-for="Template.AttemptsAllowedPerTask"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="taskMandatory" class="col-sm-4 col-form-label">
                            All Task <br />Mandatory?
                        </label>
                        <div class="col-sm-8">
                            <div class="mt20">
                                <div class="form-check-inline">
                                    <input class="form-check-input isMandatoryRadio" type="radio" name="allTaskMandatory" id="allTaskMandatoryYes" value="true" checked>
                                    <label class="form-check-label" for="allTaskMandatoryYes">
                                        Yes
                                    </label>
                                </div>

                                <div class="form-check-inline">
                                    <input class="form-check-input isMandatoryRadio" type="radio" name="allTaskMandatory" id="allTaskMandatoryNo" value="false">
                                    <label class="form-check-label" for="allTaskMandatoryNo">
                                        No
                                    </label>
                                </div>
                                <input id="mandatoryRadioInput" class="hide" type="text" asp-for="Template.IsTaskMandatory" />

                                <span id="isTaskMandatoryError" class="error text-danger" asp-validation-for="Template.IsTaskMandatory"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            
            <div class="modal-footer">
                <button type="button" class="btn btn-primary button-left"  onclick="validateTemplateForm('createTemplateForm')">Create</button>
                <button type="button" class="btn btn-light" type="delete" onclick="modalClose('createTemplateModal')">Close</button>
            </div>
        </div>
    </div>
</div>
<div class="modal-backdrop hide" style="display:none"></div>