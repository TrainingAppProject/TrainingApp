<div class="bg-white m20 p20 filterDiv" id="templateFilterSection">
    <div class="row">
        <div class="col-md-12 col-lg-12 col-sm-12">
            <div id="addFilterToggleDiv">
                <div class="row">
                    <div class="col-lg-9">
                        <button id="addFilterToggleBtn" class="btn btn-link fs17">
                            <i class="fas fa-filter"></i>
                            Add Filters
                        </button>
                    </div>
                    <div class="input-group col-lg-3">
                        <div class="input-group mb-3 searchInput">
                            <div class="input-group-prepend ">
                                <span class="input-group-text iconSpan" id="basic-addon1">
                                    <i class="fas fa-search fa-lg"></i>
                                </span>
                            </div>
                            <input id="templateSearchInput" name="templateNameSearch" type="text" class="form-control"
                                   placeholder="Search template name"
                                   aria-label="SearchString" aria-describedby="basic-addon1">
                        </div>
                    </div>
                </div>
              
                <div class="filterDropDown hide" id="templateFilterDialog">
                    <h4 class="title">Add Filters</h4>
                    <div class="mt30 mb10">
                        <p class="subtitle">Date</p>
                        <div class="custom-control-right custom-switch">
                            <input type="checkbox" class="custom-control-input" value="createDate" id="createFilterSwitch">
                            <label id="createFilterSwitchlabel" class="custom-control-label Upper"
                                   for="createFilterSwitch">create</label>
                        </div>
                        <div class="custom-control-right custom-switch">
                            <input type="checkbox" class="custom-control-input" value="modifyDate" id="modifyFilterSwitch">
                            <label id="modifyFilterSwitchlabel" class="custom-control-label Upper"
                                   for="modifyFilterSwitch">modify</label>
                        </div>
                    </div>
                    <hr />
                    <div class="mt10">
                        <p class="subtitle">State</p>
                        <div class="custom-control-right custom-switch">
                            <input type="checkbox" class="custom-control-input" value="status" id="statusFilterSwitch" checked>
                            <label class="custom-control-label Upper" for="statusFilterSwitch">Status</label>
                        </div>
                        <div class="custom-control-right custom-switch">
                            <input type="checkbox" class="custom-control-input" value="gradingSchema"  id="gradeFilterSwitch">
                            <label id="gradeFilterSwitchlabel" class="custom-control-label Upper"
                                   for="gradeFilterSwitch">Grading Schema</label>
                        </div>

                        <div class="custom-control-right custom-switch">
                            <input type="checkbox" class="custom-control-input" value="isPublished"  id="isPublishedFilterSwitch">
                            <label id="isPublishedFilterSwitchlabel" class="custom-control-label Upper"
                                   for="isPublishedFilterSwitch">Published?</label>
                        </div>
                    </div>

                    <div class="mt40">
                        <button class="btn btn-primary" id="applyFilterButton">Save</button>
                        <button class="btn btn-default floatRight" id="filterFormCancelBtn">Cancel</button>
                    </div>
                </div>
            </div>

            <div class="mt20 d-flex" id="appliedFilterDiv">
                <div class="ml20 filterSelections" id="createDateSelectionDiv" style="display:none;">
                    <div class="filterTags">
                        <input class="filterTagsInput" id="templateCreateDateRange" type="text"
                                name="templateCreateDateRange" value="Created Date: Select" />
                        <button onclick="filterSelectionHide('createDate')"><i class="far fa-times-circle buttonicon"></i></button>
                    </div>
                </div>

                <div class="ml20 filterSelections" id="modifyDateSelectionDiv" style="display:none;">
                    <div class="filterTags">
                        <input class="filterTagsInput" id="templateModifyDateRange" type="text"
                                name="templateModifyDateRange" value="Modify Date: Select" />
                        <button onclick="filterSelectionHide('modifyDate')"><i class="far fa-times-circle buttonicon"></i></button>
                    </div>
                </div>
              
                <div class="ml20 filterSelections" id="statusSelectionDiv">
                    <div class="filterTags filterSelectTags">
                        <div class="dropdown inline">
                            <div class="btn dropdown-toggle"
                                    type="button" id="dropdownMenuButton"
                                    data-toggle="dropdown"
                                    aria-haspopup="true"
                                    aria-expanded="false">
                                Status: <span id="statusValue">Active</span>
                            </div>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" onclick="setStatus('Active')">Active</a>
                                <a class="dropdown-item" onclick="setStatus('Delete')">Deleted</a>
                            </div>
                        </div>
                        <button onclick="filterSelectionHide('status')">
                            <i class="far fa-times-circle buttonicon inline"></i>
                        </button>
                    </div>
                </div>
           
                <div class="ml20 filterSelections" id="gradingSchemaSelectionDiv" style="display:none;">
                    <div class="filterTags filterSelectTags">
                        <div class="dropdown inline">
                            <div class="btn dropdown-toggle"
                                    type="button" id="dropdownMenuButton"
                                    data-toggle="dropdown"
                                    aria-haspopup="true"
                                    aria-expanded="false">
                                Grading Schema: <span id="gradingSchemaValue">Select</span>
                            </div>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" onclick="setGradingSchema('PassFail')">BASIC - Pass / Fail</a>
                                <a class="dropdown-item" onclick="setGradingSchema('Score')">ADVANCED - Score</a>
                            </div>
                        </div>
                        <button onclick="filterSelectionHide('gradingSchema')">
                            <i class="far fa-times-circle buttonicon inline"></i>
                        </button>
                    </div>
                </div>


                <div class="ml20 filterSelections" id="isPublishedSelectionDiv">
                    <div class="filterTags filterIsPublishedTags">
                        <div class="dropdown inline">
                            <div class="btn dropdown-toggle"
                                    type="button" id="dropdownMenuButton"
                                    data-toggle="dropdown"
                                    aria-haspopup="true"
                                    aria-expanded="false">
                                Published?: <span id="isPublishedValue">Select</span>
                            </div>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" onclick="setPublished('true')">Yes</a>
                                <a class="dropdown-item" onclick="setPublished('false')">No</a>
                            </div>
                        </div>
                        <button onclick="filterSelectionHide('isPublished')">
                            <i class="far fa-times-circle buttonicon inline"></i>
                        </button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
